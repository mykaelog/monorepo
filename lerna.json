{
  "npmClient": "yarn",
  "version": "independent",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "registry": ""
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "packages": [
    "packages/core/*",
    "packages/modules/*",
    "packages/utils/*"
  ]
}
